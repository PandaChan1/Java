<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pandachen.Mapper.FileMetaMapper">
    <resultMap id="BaseMap" type="com.pandachen.Model.FileMeta">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="path" jdbcType="VARCHAR" property="path" />
        <result column="pinyin" jdbcType="VARCHAR" property="pinyin" />
        <result column="pinyin_first" jdbcType="VARCHAR" property="pinyinFirst" />
        <result column="is_directory" jdbcType="BOOLEAN" property="directory" />
        <result column="size" jdbcType="BIGINT" property="size" />
        <result column="last_modified" jdbcType="BIGINT" property="lastModifiedTimestamp" />
    </resultMap>

    <sql id="Base_Column_List">
    id,name,path,is_directory,pinyin,pinyin_first,size,last_modified
    </sql>

    <delete id="deleteByIdlist">
        delete from file_meta
        where id
        in
        <foreach collection="idList" separator="," item="id" open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <insert id="saveAll">
        insert into
        file_meta (id,name,path,is_directory,pinyin,pinyin_first,size,last_modified)
        values
        <foreach collection="fileLists" item="it" separator=",">
            (
            #{it.id},
            #{it.name},
            #{it.path},
            #{it.directory},
            #{it.pinyin},
            #{it.pinyinFirst},
            #{it.size},
            #{it.lastModifiedTimestamp}
            )
        </foreach>
    </insert>

    <select id="queryByKey" resultMap="BaseMap">
        select
        <include refid="Base_Column_List"/>
        from
        file_meta
        where
        name like #{key} or pinyin like #{key} or pinyin_first like #{key}
    </select>

    <select id="queryByPath" resultMap="BaseMap">
        select
        <include refid="Base_Column_List"/>
        from
        file_meta
        where path=#{path}
    </select>
</mapper>